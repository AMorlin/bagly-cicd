# ===========================================
# Bagly - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database
DATABASE_URL="postgresql://bagly:bagly123@localhost:5432/bagly?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# OTP Configuration
OTP_EXPIRATION_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_BLOCK_DURATION_MINUTES=30

# Email - Resend (recommended)
RESEND_API_KEY="re_xxxxx"

# Email - SMTP (alternative)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="email@gmail.com"
# SMTP_PASS="app-password"
EMAIL_FROM="noreply@bagly.com.br"

# Upload Configuration
UPLOAD_PROVIDER="local"  # "local" or "s3"
UPLOAD_LOCAL_PATH="./uploads"
UPLOAD_MAX_SIZE_MB=5
UPLOAD_MAX_FILES=5

# AWS S3 (if UPLOAD_PROVIDER=s3)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_BUCKET_NAME=""
# AWS_REGION="sa-east-1"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# API Server
PORT=3333
NODE_ENV="development"

# SonarQube
SONAR_HOST_URL="http://localhost:9000"
SONAR_TOKEN="your-sonar-token"
